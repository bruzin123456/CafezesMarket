@model CafezesMarket.Models.SignUp

@{
    ViewData["Title"] = "SignUp";
}

<link rel="stylesheet" href="~/css/signup.css" />

<div class="text-center">
    <form class="form-signin" name="form-signup" method="post" asp-controller="Login" asp-action="SignUp">
        <h1 class="h3 mb-3 font-weight-normal">bem-vindo</h1>
        <div>
            <label asp-for="Nome" class="sr-only">Nome</label>
            <input asp-for="Nome" type="text" id="inputNome" class="form-control" placeholder="Nome" required>
        </div>
        <div>
            <label asp-for="Cpf" class="sr-only">Cpf</label>
            <input asp-for="Cpf" type="number" id="inputCpf" class="form-control" placeholder="Cpf" required>
        </div>
        <div>
            <label asp-for="Nascimento" class="sr-only">Data Nascimento</label>
            <input asp-for="Nascimento" type="date" id="inputNascimento" class="form-control" placeholder="Data Nascimento" required>
        </div>
        <div>
            <label asp-for="Email" class="sr-only">E-mail</label>
            <input asp-for="Email" type="email" id="inputEmail" class="form-control" placeholder="E-mail" required>
        </div>
        <div>
            <label asp-for="Senha" class="sr-only">Senha</label>
            <input asp-for="Senha" type="password" id="inputSenha" class="form-control" placeholder="Senha" required>
        </div>
        <div>
            <label asp-for="ConfirmaSenha" class="sr-only">Confirma senha</label>
            <input asp-for="ConfirmaSenha" type="password" id="inputConfirmaSenha" class="form-control" placeholder="Confirma senha" required >
        </div>

        <span asp-validation-for="Nome" class="text-danger"></span>
        <span asp-validation-for="Cpf" class="text-danger"></span>
        <span asp-validation-for="Nascimento" class="text-danger"></span>
        <span asp-validation-for="Email" class="text-danger"></span>
        <span asp-validation-for="Senha" class="text-danger"></span>
        <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>

        <br />
        <input class="btn btn-lg btn-info btn-block" type="submit" value="Cadastre-se" />
        <a class="btn btn-md btn-dark btn-block" href="/Login" role="button">Já sou cadastrado! Entrar</a>
    </form>

    @if (!string.IsNullOrWhiteSpace(ViewBag.Mensagem))
    {
        <div class="modal" id="cadastroModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Cadastro</h5>
                    </div>
                    <div class="modal-body">
                        <p>@ViewBag.Mensagem</p>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-warning" href="/Login/SignUp" role="button" data-dismiss="modal">Ok</a>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function () {
                $('#cadastroModal').modal('show');
            });
        </script>
    }
</div>